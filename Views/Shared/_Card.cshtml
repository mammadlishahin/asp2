@model Product

<div class="card" style="width: 18rem;">
  <img src="~/img/@Model.ImgUrl" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">@Model.Name</h5>
    <p class="card-text">@Model.Description</p>
    <a href="/product/details/@Model.ProductId" class="btn btn-primary">Go somewhere</a>
  </div>
</div>