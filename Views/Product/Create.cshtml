@model Product

<form method="post" asp-controller="product" asp-action="create" class="container px-4" enctype="multipart/form-data">
     <div class="mb-3">
      <label for="Name" class="form-label">Product Name</label>
      <input class="form-control" asp-for="Name">
      <div class="form-text">Ürün adını giriniz.</div>
    </div>
    <div class="mb-3">
      <label for="Description" class="form-label">Ürün Açıklaması</label>
      <input class="form-control" asp-for="Description">
    </div>
    <div class="mb-3">
      <label for="Price" class="form-label">Ürün Fiyatı</label>
      <input asp-for="Price" class="form-control" id="Price">
    </div>
    <!-- Diğer inputlar buraya eklenecek -->
    <div class="mp-3">
        <label for="ProductImg">Ürün Fotoğrafı</label>
        <input type="file" name="ProductImg" id="ProductImg">
    </div>
    <span>Kategori seçin</span> <br>
    <select asp-for="CategoriId" class="form-control">
      <option selected disabled>Seçiniz</option>
      <option value="1">Telefon</option>
      <option value="2">Bilgisayar</option>
      <option value="3">Elektronik</option>
    </select>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

